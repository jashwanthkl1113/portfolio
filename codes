  <script>
    // Smooth anchor scrolling
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const id = a.getAttribute('href').slice(1);
        const el = document.getElementById(id);
        if(el){
          e.preventDefault();
          el.scrollIntoView({behavior:'smooth', block:'start'});
          history.pushState(null, '', '#'+id);
        }
      });
    });

    // Theme toggle (light/dark)
    const themeBtn = document.getElementById('themeToggle');
    const stored = localStorage.getItem('theme');
    if(stored === 'light'){ document.documentElement.classList.add('light'); }
    themeBtn?.addEventListener('click', ()=>{
      const html = document.documentElement;
      const isLight = html.classList.toggle('light');
      themeBtn.setAttribute('aria-pressed', String(isLight));
      localStorage.setItem('theme', isLight ? 'light' : 'dark');
    });

    // Light theme tokens override
    const style = document.createElement('style');
    style.textContent = `
      .light body{ background: #f6f8fb; color:#0d1117; }
      .light section{ background:#fff; border-color:#e5e7eb; }
      .light .btn{ background:#f3f4f6; color:#0d1117; border-color:#e5e7eb }
      .light .btn.primary{ background: linear-gradient(180deg,#5ea1ff,#4f8cff); color:white }
      .light .chip{ background:#f3f4f6; border-color:#e5e7eb; color:#0d1117 }
      .light .muted{ color:#475569 }
      .light header[role="banner"]{ background:rgba(255,255,255,.8) }
    `;
    document.head.appendChild(style);

    // Pre-filled email link
    const emailBtn = document.getElementById('emailBtn');
    emailBtn?.addEventListener('click', (e)=>{
      e.preventDefault();
      const subject = encodeURIComponent('Inquiry from your portfolio site');
      const body = encodeURIComponent('Hi Jashwanth,\n\nI came across your portfolio and would like to connect.\n\nThanks,\n');
      window.location.href = `mailto:jashwanthkl1113@gmail.com?subject=${subject}&body=${body}`;
    });

    // Copy email to clipboard
    const copyBtn = document.getElementById('copyEmail');
    copyBtn?.addEventListener('click', async ()=>{
      try{
        await navigator.clipboard.writeText('jashwanthkl1113@gmail.com');
        copyBtn.textContent = 'Copied!';
        setTimeout(()=> copyBtn.textContent = 'Copy Email', 1200);
      }catch(err){
        alert('Could not copy. Please copy manually: jashwanthkl1113@gmail.com');
      }
    });

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
